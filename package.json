{
  "name": "@openbb/design-system",
  "version": "1.0.0",
  "homepage": "http://openbb-finance.github.io/design-system",
  "description": "OpenBB UI is a React component library for OpenBB Finance",
  "author": {
    "name": "JosÃ© Donato, Aleksandr Azarov"
  },
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "-preinstall": "npx only-allow bun",
    "postinstall": "rm -rf ./packages/ui/node_modules/@radix-ui/react-tooltip",
    "build": "turbo build --no-cache --force",
    "lint": "turbo lint",
    "format": "npm run format -w @openbb/ui",
    "storybook": "npm run dev -w workshop",
    "test": "npm run chromatic -w workshop",
    "prerelease": "npm run lint && changeset pre enter rc && changeset version && npm run build && npm run bump",
    "release": "npm run lint && changeset version && npm run build && npm run bump",
    "bump": "git restore ./apps && git add . && git commit -m 'chore: bump'",
    "publish": "npm run test && changeset publish"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@biomejs/biome": "1.8.3",
    "@changesets/cli": "^2.27.6",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@remix-run/eslint-config": "^2.9.2",
    "@spiriit/vite-plugin-svg-spritemap": "^2.2.4",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "braces": ">=3.0.3",
    "express": ">=4.19.2",
    "jackspeak": "2.3.6",
    "lodash": ">=4.17.21",
    "lucide-react": "^0.396.0",
    "postcss": "^8.4.38",
    "prop-types": "^15.8.1",
    "qs": ">=6.12.1",
    "tailwindcss-radix": "~2.8.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-svg-icons": "^2.0.1"
  },
  "overrides": {
    "ajv": ">=6.12.6",
    "braces": ">=3.0.3",
    "lodash": ">=4.17.21",
    "qs": ">=6.12.1",
    "ws": ">=7.5.10"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "packageManager": "yarn@4.3.1"
}
